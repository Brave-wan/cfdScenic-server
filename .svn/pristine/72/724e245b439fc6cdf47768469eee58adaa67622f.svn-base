@charset "utf-8";
/* CSS Document */
html * {
    outline: 0;
    -webkit-text-size-adjust: none;
    -webkit-tap-highlight-color: rgba(0,0,0,0);
}
body {
    color: #666;
    background: #fff;
	font-size:12; 
	line-height:1.6;
    text-rendering: optimizeLegibility;
    -ms-text-size-adjust: 100%;
    -webkit-text-size-adjust: 100%;
    font-family: "Microsoft yahei","Microsoft Yahei UI","Microsoft Yahei","微软雅黑","宋体b8b\4f53","SimSun","sans-serif","Hiragino Sans GB","Segoe UI","Tahoma";
}
body.bgbody{
	background: #fff;
}
body, div, p,ul,h3,h2,dl,dd,dt {
    margin: 0;
    padding: 0;
}
select {
    background:none;
}
h2,h3,strong,b{
    font-weight:normal;
    font-size:12px;
}

input, select {
    font-size: 100%;
    vertical-align: middle;
}

textarea, input {
    word-wrap: break-word;
    word-break: break-all;
    padding: 0px;
}
textarea{
	resize:none;
}

input,button,select {
    appearance:none;
    -moz-appearance:none; /* Firefox */
    -webkit-appearance:none; /* Safari 和 Chrome */
    outline: none;
    -webkit-border-radius:1px;
}
input:focus,input:active{
    outline:none;
}
select:focus,select:active{
	background:none !important;	
}
li {
    list-style-type: none;
}

img {
    border: 0 none;
}

a {
    text-decoration: none;
    color: #666;
    outline: none;
}

a:focus, *:focus {
    star:expression(this.onFocus=this.blur());
    outline:0;
}

a:link, a:visited {
    color: #666;
    text-decoration: none;
    outline: none;
}

a:hover {
    color: #333;
    text-decoration: none;
}

::selection {
    color: #f00;
    background-color: #f1f1f1;
}

::-moz-selection {
    color: #f00;
    background-color: #f1f1f1;
}

::-webkit-selection {
    color: #f00;
    background-color: #f1f1f1;
}

.clear {
    clear: both;
}
.pad10{
	padding: 0.267rem;
}
.pad-bot{
	padding-bottom:1.333rem;
}
/*--------头部样式---------*/
header.header{
	width:100%;
	height: 45px;
	line-height: 45px;
	overflow: hidden;
	background: #f8f8f8;
	color: #fff;
    position: fixed;
    top:0;
    left:0;
    border-bottom: solid 1px #cdcdcd;
}
header.header>div {
    font-size: 13px;
}
header.header .title{
	text-align: center;
	font-size: 13px;
   -webkit-box-pack: center;
    -webkit-justify-content: center;
    -ms-flex-pack: center;
    justify-content: center;
    -webkit-box-align: center;
    -webkit-align-items: center;
    -ms-flex-align: center;
    align-items: center;	
    color:#333;
    font-weight: bold;
}
header.header .back{
	text-align: left;
	left: .267rem;
	position: absolute;
	background: url(../images/jt.png) no-repeat left center;
	background-size:18px auto;
	width:20px;
	height: 100%;
	align-self: center;
}
/*--------------底部----------------*/
footer.foot{
	width:100%;
	height: 40px;
	line-height: 40px;
	color: #fff;
	font-size:12px;
	background: #a5e1fd;
	position:fixed;
	bottom:0;
	left:0;
	box-sizing: border-box;
	padding-left: 0.267rem;
	padding-right: 0.267rem;
}
footer.foot p{
	text-align: left;
	height: 100%;
}
footer.foot a.djload-btn{
	width:70px;
	height: 25px;
	overflow: hidden;
	line-height: 25px;
	background: #fff;
	color: #4bc4fb;
	float:right;
	align-self: center;
	text-align: center;
}
/*--------主体部分------*/
.wrap{
	width:100%;
	height: auto;
	overflow: hidden;
	padding-top: 45px;
	padding-bottom: 40px;
}
.box-bar{
    display: -webkit-box;
    display: -moz-box;
    display: -ms-flexbox;
    display: -webkit-flex;
    display: flex;
    -webkit-box-orient: horizontal;
    -webkit-box-direction: normal;
    -moz-box-orient: horizontal;
    -moz-box-direction: normal;
    -webkit-flex-direction: row;
    -ms-flex-direction: row;
    flex-direction: row;	
}
.box-bar-col{
   -webkit-flex-direction: column;
    -ms-flex-direction: column;
    flex-direction: column;	
}
.box-bar-list{
	-webkit-box-flex: 1;
    -moz-box-flex: 1;
    -webkit-flex: 1;
    -ms-flex: 1;
    flex: 1;
    text-align: center;
    box-sizing: border-box;
    align-self: center;
}
.cell{
    -webkit-box-flex: 0;
    -webkit-flex: none;
    -ms-flex: none;
    flex: none;
    width: auto;	
    align-self: center;
}
.mar-bot{
	margin-bottom: 10px;
}
