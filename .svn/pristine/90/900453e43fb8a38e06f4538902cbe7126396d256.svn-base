<%@ page contentType="text/html; charset=UTF-8"
	trimDirectiveWhitespaces="true"%>
<%@ include file="/WEB-INF/views-commons/header.jsp"%>
<div class="easyui-layout" data-options="fit:true">
	<div data-options="region:'north',border:false" style="height: 220px;">
		<div class="panel_title">
			<div style="float: left; padding: 10px">
				<i class="curLoca"></i><font class="fontbold">当前位置:</font>系统管理-分享规则设置
			</div>
		</div>
		<div class="titlediv">
			<div class="titleTxt">
				<h2>查询条件</h2>
				<em></em>
			</div>
		</div>
		<div class="querydiv">
			<p>
				<label for="searchValue">状态：</label> <select id="searchValue1"
					name="sharetype" class="easyui-combobox"
					data-options="panelHeight: 'auto',editable:false">
					<option checked value="0">不可用</option>
					<option value="1">可用</option>
				</select>
			</p>
			<p>
				<label for="searchValue">嗨币数量：</label> <input id="searchValue2"
					class="easyui-numberbox">
			</p>
			<p>
				<label for="searchValue">单个嗨币价值：</label> <input id="searchValue3"
					class="easyui-numberbox">
			</p>
			<p>
				<label for="searchValue">兑换花费：</label> <input id="searchValue4"
					class="easyui-numberbox">
			</p>
			<p>
				<a href="javascript:void(0)" class="easyui-linkbutton"
					iconCls="icon-search" onclick="frtcenVirtualCoinManager.serch()">查询</a>
			</p>
		</div>
		<div class="titlediv">
			<div class="titleTxt">
				<h2>分享规则设置</h2>
				<em></em>
			</div>
		</div>
		<div class="menubtndiv">
			<a id="shareRuleAddBtn" href="javascript:void(0)"
				onclick="frtcenVirtualCoinManager.add()" class="easyui-linkbutton"
				iconCls="icon-add">新增</a> <a id="shareRuleEditBtn"
				href="javascript:void(0)" onclick="frtcenVirtualCoinManager.edit()"
				class="easyui-linkbutton" iconCls="icon-redo">修改</a><a
				id="shareRuleDelBtn" href="javascript:void(0)"
				onclick="frtcenVirtualCoinManager.del()" class="easyui-linkbutton"
				iconCls="icon-add">删除</a>
		</div>

	</div>
	<div data-options="region:'center',border:true">
		<div class="easyui-layout" data-options="fit:true">
			<div data-options="region:'center'">
				<table id="frtcenVirtualCoinGid" class="easyui-datagrid"
					data-options="
				url:'./background/frtcenVirtualCoin/frtcenVirtualCoinData.json',
				border:false,
				fit:true,
				singleSelect:true,
				idField:'id',
				pagination:true,
				pageSize:20,
				striped:true,
				fitColumns:true">
					<thead>
						<tr>
							<th
								data-options="align:'center',width:100,hidden:true,field:'id'">id</th>
							<th
								data-options="align:'center',width:100,field:'state',formatter:function(v,r,i){
									switch (v) {
									case 0:
										return '不可用';
									case 1:
										return '可用';
									}
								}">状态</th>
							<th data-options="align:'center',width:100,field:'num'">嗨币数量</th>
							<th data-options="align:'center',width:100,field:'nummoeny'">每个嗨币价值</th>
							<th data-options="align:'center',width:100,field:'moeny'">购买花费</th>
						</tr>
					</thead>
				</table>
			</div>
		</div>
	</div>
</div>
<div id="frtcenVirtualCoinWindow" class="easyui-window" title="嗨币操作"
	data-options="closed:true,inline:true,onOpen:frtcenVirtualCoinManager.clearForm"
	style="width: 420px; height: 300px; padding: 5px;">
	<div class="easyui-layout" data-options="fit:true">
		<div data-options="region:'center'" style="padding: 10px;">
			<form id="frtcenVirtualCoinForm">
				<input type="hidden" name="id" id="frtcenVirtualCoinId">
				<p>
					<label class="bolb">嗨币状态:</label> <select id="state"
						name="state" class="easyui-combobox"
						data-options="required:true,panelHeight:'auto',editable:false">
						<option checked value="0">不可用</option>
						<option value="1">可用</option>
					</select>
				</p>
				<p>
					<label class="bolb">嗨币数量:</label> <input id="num" 
						name="num" type="text" class="easyui-numberbox"
						data-options="min:0,precision:0,max:1000"/>
				</p>
				<p>
					<label class="bolb">单个价格:</label> <input id="nummoeny"
						name="nummoeny" type="text" class="easyui-validatebox sleek"
						data-options="required:true,validType:'length[1,5]'" onblur="var a = $('#num').numberbox('getValue') == '' ? 1 : $('#num').numberbox('getValue');var b = this.value == '' ? 1 : this.value;$('#moeny').val(a * b);" maxlength="5" />
				</p>
				<p>
					<label class="bolb">嗨币总值:</label> <input id="moeny"
						name="moeny" type="text" class="easyui-validatebox sleek" 
						data-options="required:true" />
				</p>
			</form>
		</div>
		<div data-options="region:'south',border:false"
			style="text-align: right; padding: 5px 0 0;">
			<a class="easyui-linkbutton" data-options="iconCls:'icon-ok'"
				href="javascript:void(0)" onclick="frtcenVirtualCoinManager.addSub()">确定</a>
			<a class="easyui-linkbutton" data-options="iconCls:'icon-cancel'"
				href="javascript:void(0)" onclick="frtcenVirtualCoinManager.cancel()">取消</a>
		</div>
	</div>
</div>
<script type="text/javascript"
	src="scripts/opensource/background/frtcenVirtualCoin/Manager.js"></script>
<%@ include file="/WEB-INF/views-commons/footer.jsp"%>
