<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.htkj.cfdScenic.app.dao.AdvertisDao">

	 <resultMap type="com.htkj.cfdScenic.app.model.Advertisement" id="BaseResultMap">
		<id property="id" column="id" />
		<result property="linkId" column="link_id"/>
		<result property="imgUrl" column="img_url" />
		<result property="title" column="title"/>
		<result property="advertDescribe" column="advert_describe"/>
		<result property="type" column="type"/>
		<result property="state" column="state"/>
		<result property="memo" column="memo"/>
		<result property="source" column="source"/>
	</resultMap> 

	<select id="pageGetAdvertisList" parameterType="map" resultType="map">
		SELECT id,
			title,
			advert_describe,
			source,
			type,
			state,
			img_url,
			memo
		 FROM advertisement
                where 1=1
				<if test="@Ognl@isNotBlank(title)">
				  and title like CONCAT('%',#{title},'%')
				</if>
			ORDER BY id DESC
	</select>
		<select id="pageGetAdvertisList_count" parameterType="map" resultType="int">
		SELECT count(1) FROM advertisement
                where 1=1
				<if test="@Ognl@isNotBlank(title)">
				  and title like CONCAT('%',#{title},'%')
				</if>
			ORDER BY id DESC
	</select>
	<select id="selectByPrimaryKey" parameterType="Long" resultType="com.htkj.cfdScenic.app.model.Advertisement">
        SELECT
            id,
			link_id AS linkId,
			img_url AS imgUrl,
			title,
			advert_describe AS advertDescribe,
			type,
			state,
			memo,
			source
		FROM advertisement
		WHERE id = #{id}
    </select>
	<insert id="insertSelective" parameterType="com.htkj.cfdScenic.app.model.Advertisement">
		INSERT INTO advertisement
			<trim prefix="(" suffix=")" suffixOverrides=",">
				<if test="id != null">
					id,
				</if>
				<if test="linkId != null">
					link_id,
				</if>
				<if test="imgUrl != null">
					img_url,
				</if>
				<if test="title != null">
					title,
				</if>
				<if test="advertDescribe != null">
					advert_describe,
				</if>
				<if test="type != null">
					type,
				</if>
				<if test="state != null">
					state,
				</if>
				<if test="memo != null">
					memo,
				</if>
				<if test="source != null">
					source,
				</if>
			</trim>
			<trim prefix="values (" suffix=")" suffixOverrides=",">
				<if test="id != null">
					#{id},
				</if>
				<if test="linkId != null">
					#{linkId},
				</if>
				<if test="imgUrl != null">
					#{imgUrl},
				</if>
				<if test="title != null">
					#{title},
				</if>
				<if test="advertDescribe != null">
					#{advertDescribe},
				</if>
				<if test="type != null">
					#{type},
				</if>
				<if test="state != null">
					#{state},
				</if>
				<if test="memo != null">
					#{memo},
				</if>
				<if test="source != null">
					#{source},
				</if>
			</trim>
	</insert>
	<update id="updateByPrimaryKeySelective" parameterType="com.htkj.cfdScenic.app.model.Advertisement">
        UPDATE advertisement
         <set>
             <if test="linkId != null">
                 link_id = #{linkId},
             </if>
             <if test="imgUrl != null">
                 img_url = #{imgUrl},
             </if>
             <if test="title != null">
                 title = #{title},
             </if>
             <if test="advertDescribe != null">
                 advert_describe = #{advertDescribe},
             </if>
             <if test="type != null">
                 type = #{type},
             </if>
             <if test="state != null">
                 state = #{state},
             </if>
             <if test="memo != null">
                 memo = #{memo},
             </if>
             <if test="source != null">
                 source = #{source},
             </if>
         </set>
        WHERE id = #{id}
    </update>
    <delete id="deleteByPrimaryKey" parameterType="Long">
		DELETE FROM advertisement
		 WHERE id = #{id}
	</delete>
</mapper>
