                <td><input type="file" name="imageFile9" /></td>
            </tr>
            <tr>
                <td>提现密码：</td>
                <td><input type="text" name="cashPassWord" /></td>
            </tr>
            <tr>
                <td>人均消费：</td>
                <td><input type="text" name="consumption" /></td>
            </tr>
            <tr>
                <td>店铺信息介绍：</td>
                <td>
                    <script id="editor" type="text/plain" style="width:1024px;height:500px;"></script>
