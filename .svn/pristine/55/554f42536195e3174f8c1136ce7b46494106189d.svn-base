	<select id="scenicSpotComment" resultType="map" parameterType="map">
	select 
			uc.id, 
			uc.user_id, 
			uc.content, 
			uc.satisfy_state, 
			DATE_FORMAT(uc.create_time,'%Y-%m-%d %H:%m:%s') as create_time,
			uc.have_img, 
			uc.memo, 
			uc.is_travels, 
			cu.nick_name, 
			cu.head_img
		from user_comment uc join consumer_user cu on uc.user_id=cu.id
		where uc.link_id=#{id} and comment_type=1 order by create_time desc
	</select>
	
	
		<select id="scenicUserIdComment" resultMap="scenicComment" parameterType="map">

	select t.*,pl.id as plId,pl.link_id,pl.img_url from (
	select 
			uc.id, 
			uc.user_id, 
			uc.content, 
			uc.satisfy_state, 
			DATE_FORMAT(uc.create_time,'%Y-%c-%d %h:%m:%s') as create_time,
			uc.have_img, 
			uc.is_travels, 
			cu.nick_name, 
			cu.head_img,
			vs.name as visitors_name,
			vs.id as visitorsId
		from user_comment uc left join consumer_user cu on uc.user_id=cu.id left JOIN visitors vs on uc.link_id=vs.id  where comment_type=1 and uc.user_id=#{userId} limit #{page},#{rows}) t left join picture_library pl on t.id=pl.link_id 
