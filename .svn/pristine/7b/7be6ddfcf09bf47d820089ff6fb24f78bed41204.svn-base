<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.htkj.cfdScenic.app.dao.AdvertisementDao">

	<select id="findPic" resultType="map">
		select 
			link_id,img_url,title
		from
			advertisement
		where
			type = 0 and state = 0 and source = 3
	</select>
	
	<select id="selectImgUrl" resultType="map">
		select link_id,img_url,title,advert_describe,memo from advertisement where type = 0 and state = 0 and source = 2
	</select>
	
	<select id="selectPrimarySideImgUrl" resultType="map">
		select link_id,img_url,title,advert_describe,memo from advertisement where type = 0 and state = 0 and source = 1
	</select>
	
	<select id="adPositionId" resultType="map">
		select link_id,img_url,title,advert_describe,memo from advertisement where type = 1 and state = 0 and source = 1
	</select>
	<select id="getImg" resultType="map">
		select
			link_id,
			img_url
		from
			advertisement		
		where
			type = 0 and source = 5 and state = 0 
	</select>
</mapper>