<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.htkj.cfdScenic.app.dao.PictureLibraryDao">
	<insert id="savePictureLibrary" parameterType="com.htkj.cfdScenic.app.model.PictureLibrary">
		insert into picture_library
	<trim prefix="(" suffix=")" suffixOverrides=",">
		<if test="id != null">
			id,
		</if>
		<if test="name != null">
			name,
		</if>
		<if test="picDescribe != null">
			pic_describe,
		</if>
		<if test="imgUrl != null">
			img_url,
		</if>
		<if test="linkId != null">
			link_id,
		</if>
		<if test="type != null">
			type,
		</if>
		<if test="createTime != null">
			create_time,
		</if>
		<if test="memo != null">
			memo,
		</if>
		<if test="imgRootUrl != null">
			img_root_url,
		</if>
	</trim>
	<trim prefix="values (" suffix=")" suffixOverrides=",">
		<if test="id != null">
			#{id},
		</if>
		<if test="name != null">
			#{name},
		</if>
		<if test="picDescribe != null">
			#{picDescribe},
		</if>
		<if test="imgUrl != null">
			#{imgUrl},
		</if>
		<if test="linkId != null">
			#{linkId},
		</if>
		<if test="type != null">
			#{type},
		</if>
		<if test="createTime != null">
			#{createTime},
		</if>
		<if test="memo != null">
			#{memo},
		</if>
		<if test="imgRootUrl != null">
			#{imgRootUrl},
		</if>
	</trim>
	</insert>
	
	<select id="getPicById" parameterType="long" resultType="string">
		select
			img_url
		from
			picture_library
		where 
			link_id = #{goodsId} 
	</select>
	<select id="findHotelPicBy" parameterType="long" resultType="string">
		select
			img_url
		from
			picture_library
		where 
			link_id = #{id} 
	</select>
	<insert id="saveCommentPic" parameterType="com.htkj.cfdScenic.app.model.PictureLibrary">
		INSERT INTO picture_library(
				id,
				name,
				pic_describe,
				img_url,
				link_id,
				type,
				create_time,
				memo,
				img_root_url
		)VALUES(
				#{id},
				#{name},
				#{picDescribe},
				#{imgUrl},
				#{linkId},
				#{type},
				#{createTime},
				#{memo},
				#{imgRootUrl}
		)	
	</insert>
	<select id="findAtlasByVisitorsId" parameterType="long" resultType="string">
		select
			img_url
		from 
			picture_library
		where 
			link_id = #{visitorsId} and type = 1
	</select>
	<select id="selectPictureLibrary" parameterType="long" resultType="String"> 
		select
			img_url
		from
			picture_library
		where
			link_id = #{id} and type = 2			
	</select>
	<select id="getPhotoOfHomePage" parameterType="int" resultType="string">
		select
			img_url
		from
			picture_library
		where
			type = #{type} limit 1
	</select>
	<select id="getPicByTravelId" parameterType="long" resultType="string">
		select
				img_url
		from
			picture_library
		where
			link_id = #{travelId} and type = 5
	</select>
	
</mapper>