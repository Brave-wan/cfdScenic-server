<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.htkj.cfdScenic.app.dao.AdvertisementDao">


	<select id="findPic" resultType="map">
		select 
			link_id,img_url,title
		from
			advertisement
		where
			type = 0 and state = 0 and source = 3 limit 3 
	</select>
	
	<select id="selectImgUrl" resultType="map">
		select link_id,img_url,title,advert_describe,memo from advertisement where type = 0 and state = 0 and source = 1 limit 3
	</select>
	
	<select id="selectPrimarySideImgUrl" resultType="map">
		select link_id,img_url,title,advert_describe,memo from advertisement where type = 0 and state = 0 and source = 1 limit 5
	</select>
	
	<select id="adPositionId" resultType="map">
		select link_id,img_url,title,advert_describe,memo,source from advertisement where type = 1 and state = 0 and source = 1
	</select>
	<select id="getImg" resultType="map">
		select
			link_id,
			img_url
		from
			advertisement		
		where
			type = 0 and source = 5 and state = 0 
	</select>

    <select id="selectByPrimaryKey" parameterType="Long" resultType="com.htkj.cfdScenic.app.model.Advertisement">
        SELECT
            id,
			link_id AS linkId,
			img_url AS imgUrl,
			title,
			advert_describe AS advertDescribe,
			type,
			state,
			memo,
			source
		FROM advertisement
		WHERE id = #{id}
    </select>

	<select id="pageGetAdvertisement" parameterType="map" resultType="map">
		SELECT
			id,
			link_id,
			img_url,
			title,
			advert_describe,
			type,
			state,
			memo,
			source
		FROM advertisement
		WHERE 1=1
			<if test="@Ognl@isNotBlank(title)">
				AND title LIKE CONCAT ('%',#{title},'%')
			</if>
	</select>
	<select id="pageGetAdvertisement_count" parameterType="map" resultType="int">
		SELECT
			COUNT(1)
		FROM advertisement
		WHERE 1=1
			<if test="@Ognl@isNotBlank(title)">
				AND title LIKE CONCAT ('%',#{title},'%')
			</if>
	</select>

	<insert id="insertSelective" parameterType="com.htkj.cfdScenic.app.model.Advertisement">
		INSERT INTO advertisement
			<trim prefix="(" suffix=")" suffixOverrides=",">
				<if test="id != null">
					id,
				</if>
				<if test="linkId != null">
					link_id,
				</if>
				<if test="imgUrl != null">
					img_url,
				</if>
				<if test="title != null">
					title,
				</if>
				<if test="advertDescribe != null">
					advert_describe,
				</if>
				<if test="type != null">
					type,
				</if>
				<if test="state != null">
					state,
				</if>
				<if test="memo != null">
					memo,
				</if>
				<if test="source != null">
					source,
				</if>
			</trim>
			<trim prefix="values (" suffix=")" suffixOverrides=",">
				<if test="id != null">
					#{id},
				</if>
				<if test="linkId != null">
					#{linkId},
				</if>
				<if test="imgUrl != null">
					#{imgUrl},
				</if>
				<if test="title != null">
					#{title},
				</if>
				<if test="advertDescribe != null">
					#{advertDescribe},
				</if>
				<if test="type != null">
					#{type},
				</if>
				<if test="state != null">
					#{state},
				</if>
				<if test="memo != null">
					#{memo},
				</if>
				<if test="source != null">
					#{source},
				</if>
			</trim>
	</insert>

    <update id="updateByPrimaryKeySelective" parameterType="com.htkj.cfdScenic.app.model.Advertisement">
        UPDATE advertisement
         <set>
             <if test="linkId != null">
                 link_id = #{linkId},
             </if>
             <if test="imgUrl != null">
                 img_url = #{imgUrl},
             </if>
             <if test="title != null">
                 title = #{title},
             </if>
             <if test="advertDescribe != null">
                 advert_describe = #{advertDescribe},
             </if>
             <if test="type != null">
                 type = #{type},
             </if>
             <if test="state != null">
                 state = #{state},
             </if>
             <if test="memo != null">
                 memo = #{memo},
             </if>
             <if test="source != null">
                 source = #{source},
             </if>
         </set>
        WHERE id = #{id}
    </update>

	<delete id="deleteByPrimaryKey" parameterType="Long">
		DELETE FROM advertisement
		 WHERE id = #{id}
	</delete>
</mapper>
