<%@ page contentType="text/html; charset=UTF-8"
	trimDirectiveWhitespaces="true"%>
<%@ include file="/WEB-INF/views-commons/header.jsp"%>
<div class="easyui-layout" data-options="fit:true">
	<div data-options="region:'north',border:false" style="height: 220px;">
		<div class="panel_title">
			<div style="float: left; padding: 10px">
				<i class="curLoca"></i><font class="fontbold">当前位置:</font>系统管理-城市管理
			</div>
		</div>
		<div class="titlediv">
			<div class="titleTxt">
				<h2>查询条件</h2>
				<em></em>
			</div>
		</div>
		<div class="querydiv">
			<p>
				<label for="searchValueNickName">城市名称：</label> <input id="searchValue1"
					class="easyui-validatebox">

			</p>
			<p>
				<a href="javascript:void(0)" class="easyui-linkbutton"
					iconCls="icon-search" onclick="cityListManager.serch()">查询</a>
			</p>
		</div>
		<div class="titlediv">
			<div class="titleTxt">
				<h2>城市规则设置</h2>
				<em></em>
			</div>
		</div>
		<div class="menubtndiv">
			<a id="shareRuleAddBtn" href="javascript:void(0)" onclick="cityListManager.add()" class="easyui-linkbutton" iconCls="icon-add">新增</a>
			<a id="shareRuleEditBtn" href="javascript:void(0)" onclick="cityListManager.edit()" class="easyui-linkbutton" iconCls="icon-redo">修改</a>
			<a id="shareRuleDelBtn" href="javascript:void(0)" onclick="cityListManager.del()" class="easyui-linkbutton" iconCls="icon-add">删除</a>
		</div>

	</div>
	<div data-options="region:'center',border:true">
		<div class="easyui-layout" data-options="fit:true">
			<div data-options="region:'center'">
				<table id="bankListGid" >
				</table>
			</div>
		</div>
	</div>
</div>

<div id="bankWindow" class="easyui-window" title="城市规则设置操作" data-options="closed:true,inline:true" style="width: 420px; height: 300px; padding: 5px;">
	<div class="easyui-layout" data-options="fit:true">
		<div data-options="region:'center'" style="padding: 10px;">
			<form id="cityForm" method="post" enctype="multipart/form-data">
				<input type="hidden" name="id" id="id"/>
				<p>
					<label class="bolb" style="width:50px;">城市名称:&nbsp;&nbsp;&nbsp;</label>
					<input id="cityName" name="cityName" type="text" class="easyui-validatebox sleek"/>
				</p>
				<p>
					<label class="bolb" style="width:50px;">名称拼音:&nbsp;&nbsp;&nbsp;</label>
					<input id="cityNameEn" name="cityNameEn" type="text" class="easyui-validatebox sleek"/>
				</p>
				<p>
					<label class="bolb" style="width:50px;">拼音首字母:</label>
					<input id="cityShortNameEn" name="cityShortNameEn" type="text" class="easyui-validatebox sleek"/>
				</p>
				<p>
					<label class="bolb" style="width:50px;">国内(外):&nbsp;&nbsp;&nbsp;&nbsp;</label>
					<select name="cityType" id="cityType">
						<option value="1" selected="selected">国内</option>
						<option value="2">国外</option>
					</select>
				</p>
				<p>
					<label class="bolb" style="width:50px;">热门(是/否):</label>
					<select name="cityHot" id="cityHot">
						<option value="0" selected="selected">否</option>
						<option value="1">是</option>
					</select>
				</p>
			</form>
		</div>
		<div data-options="region:'south',border:false"
			style="text-align: right; padding: 5px 0 0;">
			<a class="easyui-linkbutton" data-options="iconCls:'icon-ok'"
				href="javascript:void(0)" onclick="cityListManager.addSub()">确定</a>
			<a class="easyui-linkbutton" data-options="iconCls:'icon-cancel'"
				href="javascript:void(0)" onclick="cityListManager.cancel()">取消</a>
		</div>
	</div>
</div>
<script type="text/javascript"
	src="scripts/opensource/background/cityList/Manager.js"></script>
<%@ include file="/WEB-INF/views-commons/footer.jsp"%>
